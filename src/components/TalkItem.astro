---
import PdfViewModal from './PdfViewModal.astro';
import { Icon } from 'astro-icon/components';

const { title, event, date, link, language = 'pt-br' } = Astro.props;

const maxTitleLength = 100;
const truncatedTitle =
  title.length > maxTitleLength ? title.substring(0, maxTitleLength) + '...' : title;

// Extract filename from link and create a unique modal ID
const fileName = link.split('/').pop() || '';
const modalId = `talk-modal-${fileName.replace(/[^a-z0-9]/gi, '-').toLowerCase()}`;

// Format date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<div class="group">
  <div class="relative w-full h-80 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 rounded-xl shadow-lg overflow-hidden cursor-pointer transition-all duration-300 hover:shadow-2xl hover:scale-[1.02]"
       id={`talk-${fileName}`}>
    
    {/* Animated gradient overlay */}
    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent opacity-100 group-hover:opacity-80 transition-opacity"></div>
    
    {/* Shine effect */}
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>

    {/* Content */}
    <div class="relative h-full flex flex-col p-6">
      {/* Header */}
      <div class="flex justify-between items-start mb-4">
        <span class="bg-blue-500/20 text-blue-400 text-xs font-semibold px-3 py-1 rounded-full backdrop-blur-sm border border-blue-500/20 group-hover:bg-blue-500/30 group-hover:border-blue-500/30 transition-colors">
          {language}
        </span>
        <div class="flex items-center space-x-1 text-gray-400 text-sm bg-gray-800/50 px-3 py-1 rounded-full backdrop-blur-sm">
          <Icon name="Calendar" class="w-4 h-4 group-hover:text-primary transition-colors" />
          <span class="group-hover:text-gray-300 transition-colors">{formattedDate}</span>
        </div>
      </div>

      {/* Title and Event */}
      <div class="flex-grow flex flex-col justify-start min-h-0">
        <h2 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors duration-300 line-clamp-2">
          {truncatedTitle}
        </h2>
        <p class="text-gray-300 text-sm leading-relaxed line-clamp-3">
          {event}
        </p>
      </div>

      {/* Footer - Fixed at bottom */}
      <div class="mt-auto pt-4 flex justify-end">
        <span class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-white 
                     bg-gradient-to-r from-primary/20 to-primary/30 rounded-lg 
                     group-hover:from-primary group-hover:to-primary/90 
                     transition-all duration-300 hover:shadow-lg hover:shadow-primary/20
                     border border-primary/20 group-hover:border-primary/50">
          View Presentation
          <Icon name="ArrowRight" class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" />
        </span>
      </div>
    </div>
  </div>

  <PdfViewModal 
    title={title}
    pdfUrl={link}
    fileName={fileName}
    modalId={modalId}
  />
</div>

<script is:inline define:vars={{ fileName, modalId }}>
  const talkElement = document.getElementById(`talk-${fileName}`);
  
  if (talkElement) {
    talkElement.addEventListener('click', () => {
      const event = new CustomEvent('open-pdf-modal-event', {
        detail: { modalId }
      });
      document.dispatchEvent(event);
    });
  }
</script>
